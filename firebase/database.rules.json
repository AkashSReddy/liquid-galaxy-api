{
  "rules": {
    "servers": {
      "$uid": {
        ".write": "$uid === auth.token.email.beginsWith($uid + '@')",
        ".read": true,
        "displayName": {
          ".validate": "newData.val().length < 200"
        },
        "lastOnline": {
          ".validate": "newData.val() === now"
        },
        "isOnline": {
          ".validate": "newData.isBoolean()"
        },
        "ip": {
          ".validate": "newData.val().matches(/^[0-9]{1,3}:[0-9]{1,3}:[0-9]{1,3}:[0-9]{1,3}$/)",
        },
        "hasPassword": {
          ".validate": "newData.isBoolean()"
        }
      }
    },
    "passwords": {
      "$serverUid": {
        ".write": "$serverUid === auth.token.email.beginsWith($serverUid + '@') || newData.val() === data.val()",
        ".read": false,
        ".validate": "newData.isString()"
      }
    },
    "queue": {
      "$serverUidWithKey": {
        ".write": true,
        ".read": true,
        "type": {
          ".validate": "newData.isString()"
        },
        "value": {
          ".validate": "newData.isString()"
        },
        "timestamp": {
          ".validate": "newData.val() === now"
        }
      }
    },
    "$other": {
      ".validate": false
    }
  }
}