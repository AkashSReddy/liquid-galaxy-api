{
  "rules": {
    "up": {
      "$publicIp": {
        ".read": true,
        ".validate": "$publicIp.matches(/^[0-9]{1,3}%[0-9]{1,3}%[0-9]{1,3}%[0-9]{1,3}%[0-9]{1,4}$/)",
        "$reportUid": {
          ".write": "!data.exists() && newData.exists()",
          ".validate": "newData.hasChildren(['localIp', 'timestamp'])",
          "localIp": {
            ".validate": "newData.val().matches(/^(10|172|192)\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}$/)"
          },
          "timestamp": {
            ".validate": "newData.val() === now"
          },
          "optional": {
            ".validate": "newData.val().length < 200"
          },
          "$other": {
            ".validate": false
          }
        }
      }
    }
  }
}